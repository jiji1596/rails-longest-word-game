<h1>NEW GAME</h1>

<% @letters.each do |letter| %>
<%= letter %>
<% end %>

<form action="/score" method="post" data-turbo="false">
  <!-- ... -->

  <input id="token" name="letters" type="hidden" value="<%= @letters.join %>" />
  <input id="token" name="start_time" type="hidden" value="<%= Time.now %>" />
  <input type="text" name="word" placeholder="Type your word here" >
  <input type="submit" value="Submit">

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
